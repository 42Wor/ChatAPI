        .aboutBox {
            opacity: 1;
            visibility: visible;
            border: 3px solid #333;
            background-color: #1a1a1a;
            max-width: 400px;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 6px 6px rgb(0 0 0 / 25%);
            font-family: 'Poppins', sans-serif;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
